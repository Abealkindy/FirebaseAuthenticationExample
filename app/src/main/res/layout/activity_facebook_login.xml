<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/jarak20dp"
    tools:context="com.rosinante24.firebaseauthentication.FacebookLoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/logo_w_h"
        android:layout_height="@dimen/logo_w_h"
        android:src="@drawable/firebaseicon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/welcome3"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize1" />

    <TextView
        android:id="@+id/text_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize2"
        tools:text="Otong" />

    <Button
        android:id="@+id/button_facebook_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/jarak10dp"
        android:background="@drawable/groundbutton"
        android:text="@string/btn_sign_out"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/button_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jarak45dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/jarak10dp" />

</LinearLayout>
